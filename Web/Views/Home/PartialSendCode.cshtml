<h3 class="login_form_head">Восстановление пароля</h3>
<div class="login_phone_groups_wrap clearfix">
    @using (Ajax.BeginForm("RestorePassword", "Home", new { },
    new AjaxOptions { LoadingElementId = "loading", LoadingElementDuration = 0, OnBegin = "OnBegin", OnSuccess = "ChangePasswordSuccess", OnFailure = "OnFailure", HttpMethod = "POST" },
    new { @class = "form" }))
    {
        <div class="md-input-group login_phone_num_input_group md-input-animated md-input-has-value">
            <label class="md-input-label">Введите логин или почту</label>
            <input class="md-input" name="loginOrEmail" type="text" value="@ViewBag.Email">
        </div>
        <div class="md-input-group login_phone_num_input_group md-input-animated md-input-has-value">
            <label class="md-input-label">Введите новый пароль</label>
            <input required="" class="md-input" name="pass" type="password">
        </div>
        <div class="md-input-group login_phone_num_input_group md-input-animated md-input-has-value">
            <label class="md-input-label">Повторите пароль</label>
            <input required="" class="md-input" name="repPass" type="password">
        </div>
        <div class="md-input-group login_phone_num_input_group md-input-animated md-input-has-value">
            <label class="md-input-label">Введите код отправленный на почту</label>
            <input required="" autocomplete="off" class="md-input" name="code" type="text">
        </div>
        <div class="md-input-group login_phone_num_input_group md-input-animated md-input-has-value non_border">
            <input type="submit" value="Сменить пароль">
        </div>
    }
</div>
<div class="login_footer_wrap">
    @Ajax.ActionLink("Назад", "AuthAjax", "Home", new { type = "log" }, new AjaxOptions { UpdateTargetId = "replace", LoadingElementId = "loading", LoadingElementDuration = 0, OnFailure = "OnFailure", HttpMethod = "POST" }, new { @class = "logo_footer_learn_more_link go-to-auth" })
</div>